# ================================================
# WEBHOOK SERVER CONFIGURATION
# ================================================
WEBHOOK_SERVER_PORT=3000
WEBHOOK_SERVER_HOST=0.0.0.0
WEBHOOK_BASE_URL=https://your-webhook-server.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================================
# MONITORING & OBSERVABILITY
# ================================================

# Monitoring Dashboard
MONITORING_PORT=3001
DASHBOARD_URL=http://localhost:3001/dashboard

# Sentry (Error Tracking)
# SENTRY_DSN=your_sentry_dsn
# SENTRY_ENVIRONMENT=production

# Uptime Robot
# UPTIMEROBOT_API_KEY=your_uptime_robot_key

# ================================================
# N8N CONFIGURATION
# ================================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_password
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=https://your-n8n-instance.com

# ================================================
# SECURITY & ENCRYPTION
# ================================================

# JWT Secret (for internal auth)
JWT_SECRET=your_super_secret_jwt_key_here_change_this

# Encryption Keys (for PII)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# API Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# ================================================
# FEATURE FLAGS
# ================================================

# Pipeline Features
ENABLE_AI_PERSONA_ASSIGNMENT=true
ENABLE_MICROSITE_DEPLOYMENT=true
ENABLE_AUTO_CALLING=true
ENABLE_SMS_CAMPAIGNS=false

# Billing Features
ENABLE_REAL_TIME_BILLING=true
AUTO_INVOICE_GENERATION=true
INVOICE_THRESHOLD=1000

# Development
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=false

# ================================================
# REGIONAL SETTINGS
# ================================================
TIMEZONE=America/Los_Angeles
DEFAULT_COUNTRY_CODE=US
DEFAULT_CURRENCY=USD

# ================================================
# SCALING & PERFORMANCE
# ================================================

# Connection Pooling
DB_POOL_MIN=2
DB_POOL_MAX=10

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Queue Configuration
QUEUE_PROVIDER=postgres
# Alternative: QUEUE_PROVIDER=sqs
# SQS_QUEUE_URL=https://sqs.region.amazonaws.com/account/queue

# ================================================
# COMPLIANCE & LEGAL
# ================================================
TCPA_COMPLIANCE_MODE=strict
ENABLE_CONSENT_VERIFICATION=true
DATA_RETENTION_DAYS=730
ENABLE_GDPR_FEATURES=false

# Privacy Policy URL
PRIVACY_POLICY_URL=https://equityconnect.com/privacy
TERMS_OF_SERVICE_URL=https://equityconnect.com/terms
