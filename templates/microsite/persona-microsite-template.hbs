<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{meta.title}}</title>
    <meta name="description" content="{{meta.description}}">
    <meta name="keywords" content="{{meta.keywords}}">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{meta.title}}">
    <meta property="og:description" content="{{meta.description}}">
    <meta property="og:image" content="https://{{subdomain}}.equityconnect.com/images/og-image.jpg">
    
    <!-- Google Analytics -->
    {{#if tracking.gtag}}
    <script async src="https://www.googletagmanager.com/gtag/js?id={{tracking.gtag}}"></script>
    {{/if}}
    
    <!-- Facebook Pixel -->
    {{#if tracking.fbPixel}}
    <script>
      !function(f,b,e,v,n,t,s)
      {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
      n.callMethod.apply(n,arguments):n.queue.push(arguments)};
      if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
      n.queue=[];t=b.createElement(e);t.async=!0;
      t.src=v;s=b.getElementsByTagName(e)[0];
      s.parentNode.insertBefore(t,s)}(window, document,'script',
      'https://connect.facebook.net/en_US/fbevents.js');
      fbq('init', '{{tracking.fbPixel}}');
      fbq('track', 'PageView');
    </script>
    {{/if}}
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Calendly -->
    <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
    <script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript" async></script>
    
    <style>
        :root {
            --primary-color: {{persona.primaryColor}};
            --secondary-color: {{persona.secondaryColor}};
            --text-dark: #1a1a1a;
            --text-light: #666666;
            --bg-light: #f8f9fa;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.1);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            line-height: 1.6;
            color: var(--text-dark);
            background: white;
        }
        
        /* Header */
        .header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 1rem 2rem;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: var(--shadow);
        }
        
        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .logo {
            font-size: 1.5rem;
            font-weight: 700;
        }
        
        .header-cta {
            background: white;
            color: var(--primary-color);
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            transition: transform 0.3s;
        }
        
        .header-cta:hover {
            transform: scale(1.05);
        }
        
        /* Hero Section */
        .hero {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            padding: 6rem 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120"><path fill="%23ffffff" fill-opacity="0.1" d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z"></path></svg>') no-repeat bottom;
            background-size: cover;
            opacity: 0.1;
        }
        
        .hero-content {
            max-width: 800px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
        }
        
        .hero h1 {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            line-height: 1.2;
        }
        
        .hero h2 {
            font-size: 1.8rem;
            font-weight: 400;
            margin-bottom: 1.5rem;
            opacity: 0.95;
        }
        
        .hero p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }
        
        .cta-button {
            background: white;
            color: var(--primary-color);
            padding: 1.25rem 3rem;
            font-size: 1.2rem;
            font-weight: 600;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s;
            box-shadow: var(--shadow-lg);
            text-decoration: none;
            display: inline-block;
        }
        
        .cta-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 20px rgba(0,0,0,0.15);
        }
        
        /* Features Section */
        .features {
            padding: 5rem 2rem;
            background: var(--bg-light);
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .section-title {
            text-align: center;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: var(--text-dark);
        }
        
        .section-subtitle {
            text-align: center;
            font-size: 1.2rem;
            color: var(--text-light);
            margin-bottom: 3rem;
        }
        
        .feature-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }
        
        .feature-card {
            background: white;
            padding: 2.5rem;
            border-radius: 15px;
            box-shadow: var(--shadow);
            transition: transform 0.3s, box-shadow 0.3s;
        }
        
        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }
        
        .feature-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
            font-size: 2rem;
        }
        
        .feature-card h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: var(--text-dark);
        }
        
        .feature-card p {
            color: var(--text-light);
            line-height: 1.7;
        }
        
        /* Calculator Section */
        .calculator-section {
            padding: 5rem 2rem;
            background: white;
        }
        
        .calculator {
            max-width: 600px;
            margin: 0 auto;
            background: var(--bg-light);
            padding: 3rem;
            border-radius: 15px;
            box-shadow: var(--shadow-lg);
        }
        
        .input-group {
            margin-bottom: 1.5rem;
        }
        
        .input-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: var(--text-dark);
        }
        
        .input-group input {
            width: 100%;
            padding: 1rem;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 1.1rem;
            transition: border-color 0.3s;
        }
        
        .input-group input:focus {
            outline: none;
            border-color: var(--primary-color);
        }
        
        .calculator-result {
            margin-top: 2rem;
            padding: 2rem;
            background: white;
            border-radius: 8px;
            display: none;
        }
        
        .calculator-result.active {
            display: block;
        }
        
        .result-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #e0e0e0;
        }
        
        .result-item:last-child {
            border-bottom: none;
        }
        
        .result-label {
            font-weight: 600;
            color: var(--text-dark);
        }
        
        .result-value {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--primary-color);
        }
        
        /* Testimonials */
        .testimonials {
            padding: 5rem 2rem;
            background: var(--bg-light);
        }
        
        .testimonial-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }
        
        .testimonial {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            border-left: 4px solid var(--primary-color);
            box-shadow: var(--shadow);
        }
        
        .testimonial-quote {
            font-style: italic;
            color: var(--text-light);
            margin-bottom: 1rem;
            line-height: 1.7;
        }
        
        .testimonial-author {
            font-weight: 600;
            color: var(--text-dark);
        }
        
        .testimonial-location {
            font-size: 0.9rem;
            color: var(--text-light);
        }
        
        .rating {
            color: #ffd700;
            margin-bottom: 1rem;
        }
        
        /* Neighborhood Stats */
        .neighborhood-stats {
            padding: 5rem 2rem;
            background: white;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }
        
        .stat-card {
            text-align: center;
            padding: 2rem;
            background: var(--bg-light);
            border-radius: 10px;
        }
        
        .stat-number {
            font-size: 3rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }
        
        .stat-label {
            color: var(--text-light);
            font-size: 1rem;
        }
        
        /* CTA Section */
        .cta-section {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 5rem 2rem;
            text-align: center;
        }
        
        .cta-section h2 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }
        
        .cta-section p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }
        
        /* Footer */
        .footer {
            background: var(--text-dark);
            color: white;
            padding: 3rem 2rem;
            text-align: center;
        }
        
        .footer-links {
            margin-top: 2rem;
        }
        
        .footer-links a {
            color: white;
            text-decoration: none;
            margin: 0 1rem;
            opacity: 0.8;
            transition: opacity 0.3s;
        }
        
        .footer-links a:hover {
            opacity: 1;
        }
        
        /* Exit Intent Popup */
        #exit-popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            z-index: 2000;
            align-items: center;
            justify-content: center;
        }
        
        .popup-content {
            background: white;
            padding: 3rem;
            border-radius: 15px;
            max-width: 500px;
            text-align: center;
            position: relative;
        }
        
        .popup-close {
            position: absolute;
            top: 1rem;
            right: 1rem;
            font-size: 2rem;
            cursor: pointer;
            color: var(--text-light);
        }
        
        /* Mobile Responsive */
        @media (max-width: 768px) {
            .hero h1 {
                font-size: 2rem;
            }
            
            .hero h2 {
                font-size: 1.3rem;
            }
            
            .feature-grid,
            .testimonial-grid,
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .header-content {
                flex-direction: column;
                gap: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-content">
            <div class="logo">{{persona.name}}</div>
            <a href="#contact" class="header-cta">Get Your Free Consultation</a>
        </div>
    </header>
    
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>{{persona.greeting}}</h1>
            <h2>{{persona.tagline}}</h2>
            <p>Proudly serving {{neighborhood.name}} homeowners since 2010</p>
            <button class="cta-button" onclick="scheduleConsultation()">
                ðŸ“ž Schedule Your Free Consultation
            </button>
        </div>
    </section>
    
    <!-- Features Section -->
    <section class="features">
        <div class="container">
            <h2 class="section-title">Why Choose {{persona.name}}?</h2>
            <p class="section-subtitle">Your trusted local reverse mortgage experts</p>
            
            <div class="feature-grid">
                {{#each persona.culturalElements.phrases}}
                <div class="feature-card">
                    <div class="feature-icon">âœ¨</div>
                    <h3>{{this}}</h3>
                    <p>We understand the unique needs of {{../neighborhood.name}} families and provide personalized solutions that work for you.</p>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    
    <!-- Calculator Section -->
    <section class="calculator-section">
        <div class="container">
            <h2 class="section-title">Calculate Your Home Equity</h2>
            <p class="section-subtitle">See how much you could unlock from your {{neighborhood.name}} home</p>
            
            <div class="calculator">
                <div class="input-group">
                    <label for="home-value">Current Home Value</label>
                    <input type="number" id="home-value" placeholder="$500,000" value="{{neighborhood.demographics.medianHomeValue}}">
                </div>
                
                <div class="input-group">
                    <label for="mortgage-balance">Remaining Mortgage Balance (if any)</label>
                    <input type="number" id="mortgage-balance" placeholder="$0">
                </div>
                
                <button class="cta-button" style="width: 100%; margin-top: 1rem;" onclick="calculate()">
                    Calculate Now
                </button>
                
                <div id="calculation-result" class="calculator-result">
                    <div class="result-item">
                        <span class="result-label">Your Home Equity:</span>
                        <span class="result-value" id="equity-value">$0</span>
                    </div>
                    <div class="result-item">
                        <span class="result-label">Potential Reverse Mortgage:</span>
                        <span class="result-value" id="mortgage-value">$0</span>
                    </div>
                    <div class="result-item">
                        <span class="result-label">Estimated Monthly Payment:</span>
                        <span class="result-value" id="monthly-value">$0</span>
                    </div>
                    
                    <button class="cta-button" style="width: 100%; margin-top: 1.5rem;" onclick="scheduleConsultation()">
                        Get Your Exact Quote
                    </button>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Testimonials -->
    <section class="testimonials">
        <div class="container">
            <h2 class="section-title">What {{neighborhood.name}} Homeowners Say</h2>
            
            <div class="testimonial-grid">
                {{#each neighborhood.testimonials}}
                <div class="testimonial">
                    <div class="rating">â˜…â˜…â˜…â˜…â˜…</div>
                    <p class="testimonial-quote">"{{this.quote}}"</p>
                    <p class="testimonial-author">{{this.name}}</p>
                    <p class="testimonial-location">{{../neighborhood.name}} Resident</p>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    
    <!-- Neighborhood Stats -->
    <section class="neighborhood-stats">
        <div class="container">
            <h2 class="section-title">{{neighborhood.name}} by the Numbers</h2>
            
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-number">{{neighborhood.demographics.homeownershipRate}}%</div>
                    <div class="stat-label">Homeownership Rate</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">${{neighborhood.demographics.medianHomeValue}}</div>
                    <div class="stat-label">Median Home Value</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">{{neighborhood.demographics.medianAge}}</div>
                    <div class="stat-label">Median Age</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">{{neighborhood.marketTrends.appreciation}}</div>
                    <div class="stat-label">Annual Appreciation</div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Final CTA -->
    <section class="cta-section">
        <div class="container">
            <h2>Ready to Unlock Your Home's Potential?</h2>
            <p>Schedule a free consultation with {{persona.name}} today</p>
            <button class="cta-button" onclick="scheduleConsultation()">
                ðŸ“ž Book Your Free Consultation
            </button>
        </div>
    </section>
    
    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2024 Equity Connect. All rights reserved.</p>
        <p>Serving {{neighborhood.name}}, {{neighborhood.cityName}}, {{neighborhood.stateName}}</p>
        <div class="footer-links">
            <a href="/privacy">Privacy Policy</a>
            <a href="/terms">Terms of Service</a>
            <a href="/contact">Contact Us</a>
        </div>
    </footer>
    
    <!-- Exit Intent Popup -->
    <div id="exit-popup">
        <div class="popup-content">
            <span class="popup-close" onclick="closePopup()">&times;</span>
            <h2>Wait! Before You Go...</h2>
            <p>Get a FREE personalized quote for your {{neighborhood.name}} home!</p>
            <button class="cta-button" onclick="scheduleConsultation()">
                Yes, I Want My Free Quote
            </button>
        </div>
    </div>
    
    <script>
        // Analytics initialization
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', '{{tracking.gtag}}');
        
        // Calculator
        function calculate() {
            const homeValue = parseFloat(document.getElementById('home-value').value) || 0;
            const mortgageBalance = parseFloat(document.getElementById('mortgage-balance').value) || 0;
            
            const equity = homeValue - mortgageBalance;
            const availableFunds = equity * 0.60; // Typical reverse mortgage percentage
            const monthlyPayment = availableFunds * 0.004; // Typical monthly payout
            
            document.getElementById('equity-value').textContent = '$' + equity.toLocaleString();
            document.getElementById('mortgage-value').textContent = '$' + availableFunds.toLocaleString();
            document.getElementById('monthly-value').textContent = '$' + monthlyPayment.toLocaleString();
            
            document.getElementById('calculation-result').classList.add('active');
            
            // Track event
            gtag('event', 'calculator_used', {
                'home_value': homeValue,
                'equity': equity
            });
        }
        
        // Schedule consultation
        function scheduleConsultation() {
            Calendly.initPopupWidget({
                url: '{{forms.calendlyUrl}}'
            });
            
            // Track conversion
            gtag('event', 'conversion', {
                'send_to': '{{tracking.gtag}}/conversion'
            });
            
            {{#if tracking.fbPixel}}
            fbq('track', 'Schedule');
            {{/if}}
            
            return false;
        }
        
        // Exit intent
        let exitIntentShown = false;
        document.addEventListener('mouseleave', (e) => {
            if (e.clientY <= 0 && !exitIntentShown) {
                exitIntentShown = true;
                document.getElementById('exit-popup').style.display = 'flex';
                
                gtag('event', 'exit_intent_triggered');
            }
        });
        
        function closePopup() {
            document.getElementById('exit-popup').style.display = 'none';
        }
        
        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Track time on page
        let startTime = Date.now();
        window.addEventListener('beforeunload', () => {
            const timeSpent = Math.floor((Date.now() - startTime) / 1000);
            gtag('event', 'timing_complete', {
                'name': 'page_visit',
                'value': timeSpent
            });
        });
    </script>
</body>
</html>
